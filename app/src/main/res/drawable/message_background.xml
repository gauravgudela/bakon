<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true"> <!-- Message from 'me' -->
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#FFCC80" /> <!-- Choose a color for your app theme -->
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp" />
        </shape>
    </item>
    <item> <!-- Message from others -->
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#BBDEFB" /> <!-- Another color for contrast -->
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp" />
        </shape>
    </item>
</selector>
